<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="30dip"
    android:stretchColumns="1" >

    <TableRow>

        <TextView
            android:text="Id del Salon:"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        <EditText
            android:id="@+id/editIdSalon"
            android:inputType="text"
            android:maxLength="6" />
    </TableRow>

    <TableRow>

        <TextView
            android:text="Id del encargado:"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        <EditText
            android:id="@+id/editIdEncargado"
            android:inputType="text"
            android:maxLength="5" />
    </TableRow>

    <TableRow>

        <TextView
            android:text="Tipo:"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        <EditText
            android:id="@+id/editTipo"
            android:inputType="text"
            android:maxLength="20" />
    </TableRow>

    <TableRow>

        <TextView
            android:text="Nombre del salon:"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        <EditText
            android:id="@+id/editNombreSalon"
            android:inputType="text"
            android:maxLength="50" />
    </TableRow>

    <TableRow>
        <TextView android:text="Acciones:" />
    </TableRow>

    <TableRow>
        <Button
            android:onClick="limpiarTexto"
            android:text="Limpiar datos" />
        <Button
            android:onClick="insertarSalon"
            android:text="Agregar" />
    </TableRow>
</TableLayout>